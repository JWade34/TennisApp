<!-- app/views/home/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <!-- Header -->
    <div class="flex justify-between items-center py-4">
      <h1 class="text-2xl font-bold text-gray-700">Dashboard</h1>
      <div>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'text-blue-500 hover:underline' %>
      </div>
    </div>

    <!-- Previous Matches -->
    <div class="bg-white shadow-md rounded-lg p-4 mb-6">
      <h2 class="text-xl font-semibold mb-4">Previous Matches</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @previous_matches.each do |match| %>
          <div class="bg-gray-50 p-4 rounded-lg shadow">
            <h3 class="text-lg font-bold mb-2">Match vs. <%= link_to match.opponent_name, profile_path(match.user) %></h3>
            <p class="text-gray-600">Date: <%= match.date %></p>
            <p class="text-gray-600">Result: <%= match.result %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- New Players to Message -->
    <div class="bg-white shadow-md rounded-lg p-4">
      <h2 class="text-xl font-semibold mb-4">New Players to Message</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @new_players.each do |player| %>
          <div class="bg-gray-50 p-4 rounded-lg shadow">
            <h3 class="text-lg font-bold mb-2"><%= link_to player.full_name, profile_path(player) %></h3>
            <p class="text-gray-600">NTRP Rating: <%= player.ntrp_ranking %></p>
            <%= link_to 'Send Match Invite', new_match_invite_path(recipient_id: player.id), class: 'mt-2 inline-block text-blue-500 hover:underline' %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Link to Invites -->
    <div class="bg-white shadow-md rounded-lg p-4 mt-6">
      <%= link_to 'View Your Match Invites', match_invites_path, class: 'text-blue-500 hover:underline' %>
    </div>
  </div>
</body>
</html>
